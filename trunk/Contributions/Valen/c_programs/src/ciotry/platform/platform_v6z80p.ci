    public void Draw(GameObj obj)
    {
        int x = obj.x;
        int y = obj.y;
        
        int w = 32;
        int h = 32;
        native {
            sprite_regs_t r;
        }
        byte sprNumber = GetFreeHardwareSpriteNumber();
        if(sprNumber == InvalidSpriteNumber) {
            Debug.Print("GameObj.Draw() FAILED, no HW spr number avail. Got InvalidSpriteNumber. \n");
            return;
        }
        
        //int color = 16;
        //FillRect(x, y, w, h, color);
        
        native {
            //DEBUG_PRINT("HW spr number = %u \n", sprNumber);
            r.sprite_number            = sprNumber;
            r.x                        = x;
            r.y                        = y;
            r.height                   = 1;                       // 16 pixels tall       (height in 16pixels chunks)
            r.sprite_definition_number = 0;
            r.x_flip                   = FALSE;
            SpritesRegsBuffer_SetSpriteRegs(&r);
        }
    }     
    
    
    
