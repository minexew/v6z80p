ECHO "CHOOSE AN OPTION"
ECHO "1. RED TEXT"
ECHO "2. GREEN TEXT"
ECHO "3. YELLOW TEXT"
INPUTNUM PEN
IF PEN = 1 GOTO RED
IF PEN = 2 GOTO GRN
IF PEN = 3 GOTO YEL
ECHO "INVALID CHOICE"
GOTO END
[RED]
COLOUR 3
GOTO DONE
[GRN]
COLOUR 5
GOTO DONE
[YEL]
COLOUR 7
[DONE]
ECHO "CHOICE ACCEPTED"
[END]
